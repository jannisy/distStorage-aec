<replicationpaths>
	<path start="nodeA">
		<link src="nodeA" type="sync" target="nodeB"/>
		<link src="nodeB" type="async" target="nodeC"/>
	</path>
	<path start="nodeB">
		<link src="nodeB" type="quorum" qsize="1">
			<qparticipant name="nodeA"/>
			<qparticipant name="nodeC"/>
		</link>		
	</path>
	<path start="nodeC">
		<link src="nodeC" type="async" target="nodeA"/>
		<link src="nodeC" type="async" target="nodeB"/>
	</path>
	<path start="localhost:5000">
		<link src="localhost:5000" type="sync" target="localhost:5001"/>
		<link src="localhost:5001" type="sync" target="localhost:5002"/>
	</path>
	<path start="localhost:5001">
		<link src="localhost:5001" type="async" target="localhost:5000"/>
		<link src="localhost:5001" type="async" target="localhost:5002"/>
	</path>
	<path start="localhost:5002">
		<link src="localhost:5002" type="sync" target="localhost:5001"/>
		<link src="localhost:5001" type="sync" target="localhost:5000"/>
	</path>
</replicationpaths>